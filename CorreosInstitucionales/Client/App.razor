@inject NavigationManager navigationManager

<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <NotAuthorized>
                    <!--cuando no este autorizado redirecciona a login-->
                    @{
                        if (context.User.Identity?.IsAuthenticated != true)
                            navigationManager.NavigateTo("/");
                        else
                        {
                            <PageTitle>No encontrado</PageTitle>
                            <RadzenAlert Variant="Variant.Filled"
                                         AlertStyle="AlertStyle.Danger"
                                         Size="AlertSize.Small"
                                         Shade="Shade.Darker"
                                         ShowIcon="true"
                                         AllowClose="false"
                                         Title="Error"
                                         class=""
                                         Text="No esta autorizado para ver esta Página Web o Dirección URL NO EXISTENTE" />
                            <RadzenButton Text="Ir al Inicio"
                                          BusyText=""
                                          ButtonStyle="ButtonStyle.Warning"
                                          ButtonType="ButtonType.Button"
                                          IsBusy="false"
                                          Icon="arrow_back"
                                          class="text-white rz-ripple"
                                          Shade="Shade.Darker"
                                          Size="ButtonSize.Small"
                                          Variant="Variant.Filled"
                                          Click="@(() => navigationManager.NavigateTo("/"))" />
                        }
                    }
                </NotAuthorized>
            </AuthorizeRouteView>
            <FocusOnNavigate RouteData="@routeData" Selector="h1" />
        </Found>
        <NotFound>
            <PageTitle>No encontrado</PageTitle>
            <LayoutView Layout="@typeof(MainLayout)">
                <RadzenAlert Variant="Variant.Filled"
                             AlertStyle="AlertStyle.Danger"
                             Size="AlertSize.Small"
                             Shade="Shade.Darker"
                             ShowIcon="true"
                             AllowClose="false"
                             Title="Error"
                             class=""
                             Text="Página Web o Dirección URL NO EXISTENTE" />
                <RadzenButton Text="Ir al Inicio"
                              BusyText=""
                              ButtonStyle="ButtonStyle.Warning"
                              ButtonType="ButtonType.Button"
                              IsBusy="false"
                              Icon="arrow_back"
                              class="rz-ripple"
                              Shade="Shade.Darker"
                              Click="@(() => navigationManager.NavigateTo("/"))" />
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>
