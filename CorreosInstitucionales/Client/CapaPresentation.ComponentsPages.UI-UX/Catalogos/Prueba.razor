@page "/catalogos/prueba"
@inject DialogService DialogService

@using System.Text.Json

@if (usuarios is not null)
{
    <table class="table">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>ACCIONES</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in usuarios)
            {
                <tr>
                    <td>
                        @item.UsuNombre
                        @item.UsuPrimerApellido
                        @item.UsuSegundoApellido
                    </td>
                    <td>
                        <button type="button" class="btn btn-primary" @onclick="async ()=> await Editar(item)">
                            Editar
                        </button>
                    </td>
                    <td>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<pre>
    @debug
</pre>


@code 
{
    private string debug = "";
    private List<RequestDTO_Usuario> usuarios = new List<RequestDTO_Usuario>();
    
    protected override async Task OnInitializedAsync()
    {
        usuarios = await WebUtils.ListAll(servicioUsuario);
    }

    private async Task Editar(RequestDTO_Usuario usuario)
    {
        string json = JsonSerializer.Serialize(usuario);
        RequestDTO_Usuario? registro = JsonSerializer.Deserialize<RequestDTO_Usuario>(json);

        if(registro is null)
        {
            debug = "NO SE PUDO CREAR UNA COPIA PARA EDITAR.";
        }
        else
        {
            RequestDTO_Usuario? result = await DialogService.OpenAsync<UsuarioEditor>
            (
                usuario.UsuNombre,
                new Dictionary<string, object>() { { "registro", registro } },
                new DialogOptions() {  ShowClose = false, Width = "75%" }
            );
            //CloseDialogOnEsc = true, CloseDialogOnOverlayClick = true,

            if(result is not null)
            {
                HttpResponseMessage response = await servicioUsuario.EditDataAsync(result);
                if(response.IsSuccessStatusCode)
                {
                    debug = "GUARDADO!";
                    usuario = result;
                    usuarios = await WebUtils.ListAll(servicioUsuario);
                }
            }
        }
    }

    

}