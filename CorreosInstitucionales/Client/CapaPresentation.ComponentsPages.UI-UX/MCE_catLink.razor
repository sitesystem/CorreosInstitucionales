@code {


    public Response<List<LinkViewModel>>? oResponse = new();
    SfGrid<LinkViewModel> Grid = new();
    Response<object>? oRespuesta = new();
    SfToast ToastObj = new();

    public bool EditModeSelection { get; set; }
    public int GridRowHeight = 40;

