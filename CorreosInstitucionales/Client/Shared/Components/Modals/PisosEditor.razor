@inject Radzen.DialogService dialogService

<EditForm Model=@registro OnValidSubmit="@OnValidForm">
    <div class="alert alert-info">
        Los campos marcados con <strong class="red" title="requerido">*</strong> son <strong>requeridos</strong>.
    </div>
    <DataAnnotationsValidator/>
    <div class="row"><!--ROW-->

        <div class="col-6 mb-2">
            <span class="fw-bold">IdPiso</span>
            <InputNumber @bind-Value="@registro.IdPiso" class=" form-control" />
            <ValidationMessage For="()=>registro.IdPiso"></ValidationMessage>
        </div>

        <div class="col-6 mb-2">
            <span class="fw-bold">PisoDescripcion<strong class="red" title="requerido">*</strong></span>
            <InputText @bind-Value="@registro.PisoDescripcion" class="required form-control" />
            <ValidationMessage For="()=>registro.PisoDescripcion"></ValidationMessage>
        </div>

        <div class="col-6 mb-2">
            <span class="fw-bold">PisoStatus<strong class="red" title="requerido">*</strong></span>
            <InputCheckbox @bind-Value="@registro.PisoStatus" class="required form-control" />
            <ValidationMessage For="()=>registro.PisoStatus"></ValidationMessage>
        </div>
    </div><!--ROW-->
    
    <div class="row">
        <div class="offset-8 col-2 mb-2">
            <button type="button" class="btn btn-secondary form-control" @onclick=@OnCloseForm>Cancelar</button>
        </div>

        <div class="col-2 mb-2">
            <button type="submit" class="btn btn-primary form-control">
                Guardar
            </button>
        </div>
    </div>

</EditForm>

@code
{
    [Parameter] public RequestViewModel_Piso registro { get; set; } = new RequestViewModel_Piso();

    private void OnValidForm() => dialogService.Close(registro);
    private void OnCloseForm() => dialogService.Close(null);
}
