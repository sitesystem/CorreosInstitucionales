<div id="carouselExampleAutoplaying" class="carousel carousel-dark slide" data-bs-ride="carousel">
    <div class="carousel-indicators">
        @for(int i=0;i< anuncios.Count; i++)
        {
            <button type="button" class="@(i==0?"active":string.Empty)" aria-current="@(i==0)" data-bs-target="#carouselExampleAutoplaying" data-bs-slide-to="@i" aria-label="Slide @(i+1)"></button>
        }
    </div>
    <div class="carousel-inner rz-border-radius-1">
        @for(int i = 0; i< anuncios.Count; i++)
        {
            <div class="carousel-item @(i==0?"active":string.Empty)">
                @if (anuncios[i].AnuEnlace != null && anuncios[i].AnuEnlace != "-")
                {
                    <a href="@anuncios[i].AnuEnlace" target="_blank">
                        <img src="./banners/@anuncios[i].AnuArchivo" class="d-block w-100" alt="@anuncios[i].AnuDescripcion">
                    </a>
                }
                else
                {
                    <img src="./banners/@anuncios[i].AnuArchivo" class="d-block w-100" alt="@anuncios[i].AnuDescripcion">
                }
            </div>
        }
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

@code 
{
    [Parameter]
    public List<RequestViewModel_Anuncio> anuncios { get; set; } = new ();
}
