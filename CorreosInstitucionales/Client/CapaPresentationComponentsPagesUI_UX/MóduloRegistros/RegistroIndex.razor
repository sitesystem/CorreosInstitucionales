@page "/RegistroUsuario"

@attribute [AllowAnonymous]

@layout LoginLayout

<PageTitle>SACI | Registro de Usuari@@</PageTitle>

<RadzenComponents />

<style type="text/css">
</style>

<!-- Encabezado de Página (Header Fixed-Top) -->
<header>
    <!-- ... Contenido para pantallas pequeñas móviles -->
    <div class="d-block d-sm-block d-md-none d-lg-none d-xl-none d-xxl-none">
        <RadzenHeader class="rz-border-radius-0 rz-py-0 rz-background-color-base-100" Style="border-bottom: 8px solid #076633;">
            <RadzenImage Path="./pleca_registro_movil.png" Style="" AlternateText="SACI - Sistema de Atención para Correos Institucionales" class="img-fluid rz-my-0" />
        </RadzenHeader>
    </div>

    <!-- ... Contenido para pantallas grandes ... -->
    <div class="d-none d-sm-none d-md-block d-lg-block d-xl-block d-xxl-block">
        <RadzenHeader class="rz-border-radius-0 rz-py-0 rz-background-color-base-100" Style="border-bottom: 8px solid #076633;">
            <RadzenImage Path="./header_saci_2.png" Style="" AlternateText="SACI - Sistema de Atención para Correos Institucionales" class="img-fluid rz-my-0" />
        </RadzenHeader>
    </div>
</header>
<hr class="d-block rz-my-10 rz-color-base-100" />
<hr class="d-none d-xxl-block rz-my-10 rz-color-base-100" />
<div class="container rz-background-color-base-800 rz-p-3 rz-border-radius-1">
    <div class="row align-items-center">
        <div class="col">
            <RadzenCard Variant="Variant.Filled" class="rz-background-color-white rz-shadow-2 rz-border-radius-1 rz-py-2 rz-mb-3">
                <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Normal" JustifyContent="JustifyContent.SpaceBetween" Wrap="FlexWrap.NoWrap" Gap="10px" Class="w-100">
                    <RadzenText TextStyle="TextStyle.Body1">
                        <h5 style="font-variant: small-caps;">
                            <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-person-add" viewBox="0 0 16 16">
                                <path d="M12.5 16a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7m.5-5v1h1a.5.5 0 0 1 0 1h-1v1a.5.5 0 0 1-1 0v-1h-1a.5.5 0 0 1 0-1h1v-1a.5.5 0 0 1 1 0m-2-6a3 3 0 1 1-6 0 3 3 0 0 1 6 0M8 7a2 2 0 1 0 0-4 2 2 0 0 0 0 4" />
                                <path d="M8.256 14a4.5 4.5 0 0 1-.229-1.004H3c.001-.246.154-.986.832-1.664C4.484 10.68 5.711 10 8 10q.39 0 .74.025c.226-.341.496-.65.804-.918Q8.844 9.002 8 9c-5 0-6 3-6 4s1 1 1 1z" />
                            </svg> Registro de Usuari@@
                        </h5>
                    </RadzenText>
                    <RadzenButton Text="Regresar"
                                  BusyText=""
                                  ButtonStyle="ButtonStyle.Warning"
                                  ButtonType="ButtonType.Button"
                                  IsBusy="false"
                                  Icon="arrow_back"
                                  class="rz-color-white rz-ripple"
                                  Shade="Shade.Darker"
                                  Click="@(() => navigationManager.NavigateTo("/"))" />
                </RadzenStack>
            </RadzenCard>

            <RadzenTabs TabPosition="TabPosition.Top" RenderMode="TabRenderMode.Client">
                <Tabs>
                    <RadzenTabsItem Text="Alumn@s" Icon="school" IconColor="@Colors.Base800" Style="font-family:var(--rz-text-font-family);">
                        <RadzenTabs TabPosition="TabPosition.Top" RenderMode="TabRenderMode.Client">
                            <Tabs>
                                <RadzenTabsItem Text="@($@"Alumn@ Inscrit@")" Icon="school" IconColor="@Colors.Base800" Style="font-family:var(--rz-text-font-family);">
                                    <Alumnos ActionAddEdit="agregar" oEditUsuario="null" IdTipoPersonal="1" TipoPersonal="alumno_inscrito" />   @* Agregar Registro Alumno Inscrito *@
                                </RadzenTabsItem>
                                <RadzenTabsItem Text="@($@"Egresad@")" Icon="school" IconColor="@Colors.Base800" Style="font-family:var(--rz-text-font-family);">
                                    <Alumnos ActionAddEdit="agregar" oEditUsuario="null" IdTipoPersonal="2" TipoPersonal="egresado" />          @* Agregar Registro Alumno Egresado *@
                                </RadzenTabsItem>
                                <RadzenTabsItem Text="Posgrado" Icon="school" IconColor="@Colors.Base800" Style="font-family:var(--rz-text-font-family);">
                                    <Alumnos ActionAddEdit="agregar" oEditUsuario="null" IdTipoPersonal="3" TipoPersonal="posgrado" />          @* Agregar Registro Alumno Maestría *@
                                </RadzenTabsItem>
                            </Tabs>
                        </RadzenTabs>
                    </RadzenTabsItem>
                    <RadzenTabsItem Text="Emplead@s" Icon="badge" IconColor="@Colors.Base800" Style="font-family:var(--rz-text-font-family);">
                        <RadzenTabs RenderMode="TabRenderMode.Client">
                            <Tabs>
                                <RadzenTabsItem Text="PAAE (Administrativo)" Icon="badge" IconColor="@Colors.Base800" Style="font-family:var(--rz-text-font-family);">
                                    <Empleados ActionAddEdit="agregar" oEditUsuario="null" IdTipoPersonal="4" TipoPersonal="administrativo" />  @* Agregar Registro Empleado Administrativo *@
                                </RadzenTabsItem>
                                <RadzenTabsItem Text="Docente" Icon="badge" IconColor="@Colors.Base800" Style="font-family:var(--rz-text-font-family);">
                                    <Empleados ActionAddEdit="agregar" oEditUsuario="null" IdTipoPersonal="5" TipoPersonal="docente" />         @* Agregar Registro Empleado Docente *@
                                </RadzenTabsItem>
                                <RadzenTabsItem Text="Honorarios" Icon="badge" IconColor="@Colors.Base800" Style="font-family:var(--rz-text-font-family);">
                                    <Empleados ActionAddEdit="agregar" oEditUsuario="null" IdTipoPersonal="6" TipoPersonal="honorarios" />      @* Agregar Registro Empleado Honorarios *@
                                </RadzenTabsItem>
                            </Tabs>
                        </RadzenTabs>
                    </RadzenTabsItem>
                </Tabs>
            </RadzenTabs>
        </div>
    </div>
</div>
<hr class="d-block rz-color-base-100 rz-my-7" />
